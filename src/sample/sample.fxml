<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Game">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <AnchorPane fx:id="background" prefHeight="628.0" prefWidth="332.0">
      <ImageView fx:id="win" fitHeight="641.0" fitWidth="332.0" layoutX="3.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/winner-01.png" />
         </image>
      </ImageView>
      <ImageView fx:id="imageview" fitHeight="663.0" fitWidth="332.0" layoutX="3.0" layoutY="-15.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@Images/SAL-01.png" />
      </ImageView>
      <Button fx:id="exitButton" blendMode="MULTIPLY" layoutX="17.0" layoutY="34.0" mnemonicParsing="false" onAction="#coverToPlayer" prefHeight="0.0" prefWidth="24.0" />
      <ImageView fx:id="diceImage" fitHeight="38.0" fitWidth="38.0" layoutX="149.0" layoutY="542.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@Images/dice/dice-01.png" />
      </ImageView>
      <ImageView fx:id="bluePawn" fitHeight="57.0" fitWidth="46.0" layoutX="19.0" layoutY="492.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@Images/bluePawn.png" />
