            <Image url="@Images/arrow.png" />
         </image>
      </ImageView>
      <Button fx:id="rollButton" blendMode="MULTIPLY" layoutX="140.0" layoutY="530.0" mnemonicParsing="false" onAction="#roll" prefHeight="57.0" prefWidth="58.0" />
      <Label layoutX="94.0" layoutY="550.0" prefHeight="18.0" prefWidth="38.0" text="Anshul" textFill="WHITE" />
      <Label layoutX="203.0" layoutY="550.0" prefHeight="18.0" prefWidth="48.0" text="Aniketh" textFill="WHITE" />
      <Rectangle fx:id="p1shadow" arcHeight="5.0" arcWidth="5.0" height="42.0" layoutX="49.0" layoutY="538.0" opacity="0.45" stroke="BLACK" strokeType="INSIDE" width="90.0" />
